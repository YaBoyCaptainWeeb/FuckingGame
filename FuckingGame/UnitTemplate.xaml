<UserControl x:Class="FuckingGame.UnitTemplate"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FuckingGame"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" >
    <Grid>
        <Image x:Name="UnitImage" Source="ASSets/Archer.png"/>
        <ProgressBar x:Name="UnitHealthBar" Minimum="0"  Height="10" Foreground="Red" Margin="0 55 0 0"/>
        <TextBlock Text="{Binding ElementName=UnitHealthBar, Path=Value, StringFormat={}{0}}" Foreground="Black" FontWeight="SemiBold" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0 55 0 0"/>
    </Grid>
</UserControl>
